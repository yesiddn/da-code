    <img class="absolute w-1/3 -top-2/5 -translate-x-1/3 -rotate-45 -z-10" src="img/circle-secondary.svg" alt="Circles">

    {
      projects.map((project) => (
        <ProjectCard img={project.img} description={project.description} />
      ))
    }
