---
import PostList from "../components/PostList.astro"

const posts = [
  {
    title: "Why Your SaaS Business should use WordPress",
    description: "A content management system like WordPress can help you build a highly engaging website for your SaaS business, with little to no effort",
    url: "/",
  },
  {
    title: "How to Build a SaaS Product with WordPress",
    description: "A step-by-step guide on how to build a SaaS product using WordPress, from ideation to launch.",
    url: "/",
  },
  {
    title: "The Future of SaaS and WordPress",
    description: "An analysis of the future of SaaS and how WordPress fits into that picture.",
    url: "/",
  }
]
