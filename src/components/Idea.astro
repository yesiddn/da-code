---
interface Props {
  number: number;
  title: string;
  description: string;
}

const idea = Astro.props;
---
<div class="flex flex-col gap-6 md:flex-row">

  <span class="flex justify-center items-center shrink-0 w-16 h-16 text-center rounded-full bg-white shadow-xl font-bold text-2xl text-seconday md:-translate-y-5">{idea.number}</span>

  <div class="mb-8">
    <h3 class="mb-4 font-bold text-xl text-dark">{idea.title}</h3>
    <p class="text-pretty">{idea.description}</p>
  </div>
</div>
