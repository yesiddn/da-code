---
import NavBar from "./NavBar.astro";

interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<header class="fixed flex justify-around items-center w-full py-8 bg-white z-50">
  <a href="/">
    <img src="img/logo.svg" alt="DaCode logo">
  </a>

  <NavBar pageTitle={pageTitle} />
</header>
